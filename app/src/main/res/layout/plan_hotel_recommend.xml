<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="81dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@drawable/list_line_divider"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="src_in"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/plan_recommend_upper_divider"
        ></ImageView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/plan_recommended_hotel_list"
        android:layout_above="@+id/plan_recommend_lower_divider"
        android:layout_below="@+id/plan_recommend_upper_divider"
        ></android.support.v7.widget.RecyclerView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@drawable/list_line_divider"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="src_in"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/plan_recommend_lower_divider"
        android:layout_alignParentBottom="true"
        ></ImageView>

</RelativeLayout>