<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/recommend_view_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_view_name"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_view_addr"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorFontLightGrey"
            android:textSize="14sp"
            />
        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/recommend_view_map"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            map:uiZoomControls="true"
            map:uiRotateGestures="true"
            map:uiScrollGestures="true"
            map:uiZoomGestures="true"
            map:uiTiltGestures="false"
            map:uiCompass="false"
            map:mapType="normal"
            map:liteMode="true"
            >
        </com.google.android.gms.maps.MapView>
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/recommend_selected"
        android:background="@mipmap/ok"
        android:backgroundTint="@color/colorButton"
        android:backgroundTintMode="src_in"
        />

</RelativeLayout>