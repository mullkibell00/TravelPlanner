<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="23dp"
        android:orientation="vertical"
        >
        <!--explanation-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGrey"
            android:text="@string/txt_tour_time_explain"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/daily_info_explain"
            />
        <!--daily tour start-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontDark"
            android:textSize="17sp"
            android:text="@string/txt_tour_start_time"
            android:layout_marginRight="20dp"
            android:id="@+id/daily_info_txt_tour_start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center"
            android:background="@drawable/selectable_textview_background"
            android:textColor="@color/selectable_textview_font"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/txt_select_traveling_time"
            android:textIsSelectable="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:id="@+id/daily_info_selected_tour_start"
            />
    </LinearLayout>
        <!--daily tour end-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontDark"
                android:textSize="17sp"
                android:text="@string/txt_tour_end_time"
                android:layout_marginRight="20dp"
                android:id="@+id/daily_info_txt_tour_end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:background="@drawable/selectable_textview_background"
                android:textColor="@color/selectable_textview_font"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@string/txt_select_traveling_time"
                android:textIsSelectable="true"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:id="@+id/daily_info_selected_tour_end"
                />
        </LinearLayout>
        <!--explanation about lodging-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGrey"
            android:text="@string/txt_lodging_explain"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/daily_info_lodging_explain"/>
        <!--checkbox-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="23dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/txt_lodging_yes"
                    android:layout_marginRight="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/checkbox_font"
                    android:textStyle="bold"
                    android:id="@+id/daily_info_txt_lodging_yes"
                    android:textIsSelectable="true"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    />
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/colorAccent"
                    android:backgroundTintMode="src_in"
                    android:id="@+id/daily_info_check_yes"
                    android:checked="false" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/txt_lodging_no"
                    android:layout_marginRight="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/checkbox_font"
                    android:textStyle="bold"
                    android:id="@+id/daily_info_txt_lodging_no"
                    android:textIsSelectable="true"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    />
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/colorAccent"
                    android:backgroundTintMode="src_in"
                    android:id="@+id/daily_info_check_no"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--supportive question-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorFontGrey"
                android:text="@string/txt_lodging_multiple_selection"
                android:id="@+id/daily_info_txt_lodging_plus"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:background="@drawable/checkbox"
                    android:backgroundTint="@color/colorAccent"
                    android:backgroundTintMode="src_in"
                    android:id="@+id/daily_info_check_lodging_plus"
                    />
            </LinearLayout>
        </LinearLayout>
        <ViewStub
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false"
            android:id="@+id/daily_info_lodging_stub"
            android:inflatedId="@+id/daily_info_lodging_container"
            />
    </LinearLayout>
</ScrollView>